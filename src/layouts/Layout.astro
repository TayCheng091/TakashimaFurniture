---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const basePath = import.meta.env.BASE_URL + '/';
const logoPath = `${basePath}logo.png`;
---

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="高島名床 - 專業寢具品牌" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={logoPath} />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | 高島名床</title>
	</head>
	<body class="min-h-screen">
		<header class="bg-white shadow-sm">
			<nav class="container mx-auto px-4 py-4">
				<div class="flex items-center justify-between">
					<a href={basePath || '/'} class="flex items-center space-x-2">
						<img src={logoPath} alt="高島名床 Logo" class="h-8" />
						<span class="text-2xl font-bold text-nature-dark">高島名床</span>
					</a>
					<div class="hidden md:flex space-x-8">
						<a href={`${basePath}products/pillows`} class="text-gray-600 hover:text-nature-primary transition-colors">枕頭</a>
						<a href={`${basePath}products/beds`} class="text-gray-600 hover:text-nature-primary transition-colors">床</a>
						<a href={`${basePath}products/bedside-tables`} class="text-gray-600 hover:text-nature-primary transition-colors">床頭櫃</a>
						{/* <a href={`${basePath}products/sofas`} class="text-gray-600 hover:text-gray-900">沙發</a> */}
						<a href={`${basePath}about`} class="text-gray-600 hover:text-nature-primary transition-colors">關於我們</a>
						<a href={`${basePath}contact`} class="text-gray-600 hover:text-nature-primary transition-colors">聯絡我們</a>
					</div>
				</div>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer class="bg-nature-beige">
			<div class="container mx-auto px-4 py-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-lg font-semibold mb-4 text-nature-dark">高島名床</h3>
						<p class="text-gray-600">專業寢具品牌，為您打造舒適的睡眠環境</p>
					</div>
					<div>
						<h3 class="text-lg font-semibold mb-4 text-nature-dark">聯絡資訊</h3>
						<p class="text-gray-600">電話：02-XXXX-XXXX</p>
						<p class="text-gray-600">Email：contact@takashima.com</p>
					</div>
					<div>
						<h3 class="text-lg font-semibold mb-4 text-nature-dark">營業時間</h3>
						<p class="text-gray-600">週一至週五：10:00 - 18:00</p>
						<p class="text-gray-600">週六至週日：11:00 - 17:00</p>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-nature-brown text-center text-gray-600">
					<p>&copy; {new Date().getFullYear()} 高島名床. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
