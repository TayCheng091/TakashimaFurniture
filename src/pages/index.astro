---
import Layout from '../layouts/Layout.astro';
import BannerCarousel from '../components/BannerCarousel.astro';

const bannerImages = [
	`${import.meta.env.BASE_URL}images/banner/banner_1.jpg`,
	`${import.meta.env.BASE_URL}images/banner/banner_2.jpg`,
	`${import.meta.env.BASE_URL}images/banner/banner_3.jpg`,
	`${import.meta.env.BASE_URL}images/banner/banner_4.jpg`,
	`${import.meta.env.BASE_URL}images/banner/banner_5.jpg`,
] as const;

const basePath = import.meta.env.BASE_URL;
---

<Layout title="首頁">
	<div class="relative">
		<!-- Hero Section -->
		<div class="relative h-[600px]">
			<BannerCarousel images={bannerImages} height="600px" />
			<div class="relative container mx-auto px-4 h-full flex items-center z-10">
				<div class="max-w-2xl text-white">
					<h1 class="text-5xl font-bold mb-6">高島名床</h1>
					<p class="text-xl mb-8">源自日本高島山的靈感，為您打造最舒適的睡眠體驗</p>
					<a href={`${basePath}products/beds`} class="btn-primary">
						探索產品
					</a>
				</div>
			</div>
		</div>

		<!-- Features Section -->
		<div class="py-16 bg-white">
			<div class="container mx-auto px-4">
				<h2 class="section-title">我們的特色</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="text-center">
						<div class="w-16 h-16 bg-nature-light bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-nature-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-2 text-nature-dark">優質材質</h3>
						<p class="text-gray-600">嚴選高級材料，確保產品品質</p>
					</div>
					<div class="text-center">
						<div class="w-16 h-16 bg-nature-light bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-nature-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-2 text-nature-dark">快速配送</h3>
						<p class="text-gray-600">專業物流團隊，準時送達</p>
					</div>
					<div class="text-center">
						<div class="w-16 h-16 bg-nature-light bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-nature-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-2 text-nature-dark">專業服務</h3>
						<p class="text-gray-600">專業團隊提供最佳建議</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Product Categories -->
		<div class="py-16 bg-nature-beige">
			<div class="container mx-auto px-4">
				<h2 class="section-title">產品系列</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<a href={`${basePath}products/pillows`} class="group">
						<div class="card">
							<div class="aspect-w-16 aspect-h-9 bg-nature-light bg-opacity-20"></div>
							<div class="p-6">
								<h3 class="text-xl font-semibold mb-2 text-nature-dark">枕頭系列</h3>
								<p class="text-gray-600">為您打造最舒適的睡眠體驗</p>
							</div>
						</div>
					</a>
					<a href={`${basePath}products/beds`} class="group">
						<div class="card">
							<div class="aspect-w-16 aspect-h-9 bg-nature-light bg-opacity-20"></div>
							<div class="p-6">
								<h3 class="text-xl font-semibold mb-2 text-nature-dark">床系列</h3>
								<p class="text-gray-600">優質床架與床墊的完美組合</p>
							</div>
						</div>
					</a>
					<a href={`${basePath}products/bedside-tables`} class="group">
						<div class="card">
							<div class="aspect-w-16 aspect-h-9 bg-nature-light bg-opacity-20"></div>
							<div class="p-6">
								<h3 class="text-xl font-semibold mb-2 text-nature-dark">床頭櫃系列</h3>
								<p class="text-gray-600">實用美觀的臥室收納方案</p>
							</div>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</Layout>
