---
import Layout from '../layouts/Layout.astro';

interface FormData {
  name: string;
  email: string;
  phone: string;
  message: string;
}
---

<Layout title="聯絡我們">
  <div class="min-h-screen">
    <!-- Hero Section -->
    <div class="relative h-[300px] bg-nature-dark">
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div class="relative container mx-auto px-4 h-full flex items-center">
        <div class="max-w-2xl text-white">
          <h1 class="text-5xl font-bold mb-6">聯絡我們</h1>
          <p class="text-xl">我們期待與您聯繫，為您提供最專業的服務</p>
        </div>
      </div>
    </div>

    <!-- Contact Section -->
    <div class="py-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div>
            <h2 class="section-title">聯絡表單</h2>
            <form class="space-y-6" id="contactForm">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">姓名</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-2 border border-nature-light rounded-lg focus:ring-2 focus:ring-nature-primary focus:border-transparent"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">電子郵件</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 border border-nature-light rounded-lg focus:ring-2 focus:ring-nature-primary focus:border-transparent"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">電話</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-2 border border-nature-light rounded-lg focus:ring-2 focus:ring-nature-primary focus:border-transparent"
                />
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">訊息</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  class="w-full px-4 py-2 border border-nature-light rounded-lg focus:ring-2 focus:ring-nature-primary focus:border-transparent"
                ></textarea>
              </div>
              <button
                type="submit"
                class="btn-primary w-full"
              >
                送出訊息
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div>
            <h2 class="section-title">聯絡資訊</h2>
            <div class="space-y-6">
              <div>
                <h3 class="text-xl font-semibold mb-2 text-nature-dark">地址</h3>
                <p class="text-gray-600">台北市信義區信義路五段7號</p>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2 text-nature-dark">電話</h3>
                <p class="text-gray-600">02-XXXX-XXXX</p>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2 text-nature-dark">電子郵件</h3>
                <p class="text-gray-600">contact@takashima.com</p>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2 text-nature-dark">營業時間</h3>
                <p class="text-gray-600">週一至週五：10:00 - 18:00</p>
                <p class="text-gray-600">週六至週日：11:00 - 17:00</p>
              </div>
            </div>

            <!-- Join Us Section -->
            <div class="mt-12">
              <h2 class="section-title">加入我們</h2>
              <p class="text-gray-600 mb-6">
                我們正在尋找充滿熱情的人才加入我們的團隊。如果您對家具設計和客戶服務充滿熱情，
                歡迎將您的履歷寄至 careers@takashima.com
              </p>
              <a
                href="mailto:careers@takashima.com"
                class="btn-primary inline-block"
              >
                投遞履歷
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  interface FormData {
    name: string;
    email: string;
    phone: string;
    message: string;
  }

  const form = document.getElementById('contactForm') as HTMLFormElement;
  
  form?.addEventListener('submit', async (event) => {
    event.preventDefault();
    const formData = new FormData(form);
    const data: FormData = {
      name: formData.get('name') as string,
      email: formData.get('email') as string,
      phone: formData.get('phone') as string,
      message: formData.get('message') as string,
    };
    
    // TODO: 處理表單提交
    console.log('Form submitted:', data);
  });
</script> 