const products = [
  {
    id: 'bed-1',
    name: '台灣頂級松琛床',
    description: '採用台灣高山特級松針，蓬鬆柔軟卻帶有絕佳支撐力。每一根松針都經過精心挑選，搭配特殊工藝處理，為您打造最舒適的睡眠體驗。',
    price: 29900,
    image: `${import.meta.env.BASE_URL}/images/products/beds/pine-needle-bed.webp`,
    category: 'beds'
  },
  {
    id: 'bed-2',
    name: '日式榻榻米床',
    description: '傳統日式設計，低床身設計適合小空間。採用天然藺草編織，散發淡淡草香，搭配現代化支撐系統，完美結合傳統與現代。',
    price: 19900,
    image: `${import.meta.env.BASE_URL}/images/products/beds/tatami-bed.webp`,
    category: 'beds'
  },
  {
    id: 'bed-3',
    name: '歐式古典床',
    description: '精緻雕花設計，高貴典雅。採用實木框架，搭配高級布面材質，完美呈現歐式古典風格。特殊防蟲處理，確保使用壽命。',
